@model SquadManager.Models.UserViewModel
@{ Layout = null; }
<link rel="stylesheet" href="~/css/login.css" />

<div>

        <h1>Authentication</h1>

    <form>
       
        <input type="text" id="email" name="email" value="@Model.Email"  placeholder="Username/Email"/>
        <input type="password" required id="password" name="password" value="@Model.Password" placeholder="Password" />
        <a href="#">Forgot password?</a>

        <button type="submit">Login</button>
    
    </form>

    <label>Don't have an account? <a href="#">Create here</a></label> 

</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/login.js"></script>

